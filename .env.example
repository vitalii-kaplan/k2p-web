# -----------------------------------------------------------------------------
# Django core
# -----------------------------------------------------------------------------
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-only-change-me
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# -----------------------------------------------------------------------------
# Paths (relative paths are resolved under REPO_ROOT)
# -----------------------------------------------------------------------------
REPO_ROOT=.
SQLITE_PATH=var/db.sqlite3

MEDIA_ROOT=var/media
JOB_STORAGE_ROOT=var/jobs
RESULT_STORAGE_ROOT=var/results

# -----------------------------------------------------------------------------
# K8s / worker
# -----------------------------------------------------------------------------
K8S_NAMESPACE=k2p
K2P_IMAGE=ghcr.io/vitalii-kaplan/knime2py:main
MAX_QUEUED_JOBS=50

# -----------------------------------------------------------------------------
# Optional: Postgres (only used if DB_ENGINE=postgres)
# -----------------------------------------------------------------------------
DB_ENGINE=sqlite
# DB_ENGINE=postgres
# DB_NAME=k2pweb
# DB_USER=k2pweb
# DB_PASSWORD=change-me
# DB_HOST=127.0.0.1
# DB_PORT=5432
