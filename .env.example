# Django
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-only-change-me
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000

# Storage roots (relative paths allowed)
JOB_STORAGE_ROOT=var/jobs
RESULT_STORAGE_ROOT=var/results
MEDIA_ROOT=var/media

# DB (default is sqlite if DB_ENGINE not set)
DB_ENGINE=sqlite
SQLITE_PATH=var/db.sqlite3

# For Postgres (when DB_ENGINE=postgres)
DB_NAME=k2pweb
DB_USER=k2pweb
DB_PASSWORD=k2pweb
DB_HOST=127.0.0.1
DB_PORT=5432

# Kubernetes / runner
K8S_NAMESPACE=k2p
K2P_IMAGE=ghcr.io/vitalii-kaplan/knime2py:main
REPO_ROOT=.

# Backpressure (optional)
MAX_QUEUED_JOBS=50
